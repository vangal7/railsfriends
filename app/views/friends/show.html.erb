<div class="card">
  

  <div class="card-body">
    <h1 class="card-title"><%= @friend.First_Name + ' ' + @friend.Last_Name%></h1>

     <%= @friend.Email %> |
     <%= @friend.Phone %> |
     <%= @friend.Twitter %> <br><br>

    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %> 

    <%= link_to 'Delete', @friend, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>

    <%= link_to "Back", friends_path, class:"btn btn-secondary btn-dark" %>

  </div>
</div>
